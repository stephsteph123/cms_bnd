<html>
<head>
  <title>Camera 1 Page</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
</head>
<body>
  <canvas></canvas>

  <script type="text/javascript">
// Create the scene, camera, and renderer
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
const renderer = new THREE.WebGLRenderer();
renderer.setSize(window.innerWidth, window.innerHeight);
document.body.appendChild(renderer.domElement);

// Create the walls of the building
const wallGeometry = new THREE.BoxGeometry(10, 5, 1);
const wallMaterial = new THREE.MeshBasicMaterial({ color: 0x808080 });
const wall1 = new THREE.Mesh(wallGeometry, wallMaterial);
wall1.position.set(0, 2.5, -5);
const wall2 = new THREE.Mesh(wallGeometry, wallMaterial);
wall2.position.set(0, 2.5, 5);
const wall3 = new THREE.Mesh(wallGeometry, wallMaterial);
wall3.position.set(5, 2.5, 0);
wall3.rotation.y = Math.PI / 2;
const wall4 = new THREE.Mesh(wallGeometry, wallMaterial);
wall4.position.set(-5, 2.5, 0);
wall4.rotation.y = Math.PI / 2;

// Create the roof of the building
const roofGeometry = new THREE.ConeGeometry(5.5, 2, 4);
const roofMaterial = new THREE.MeshBasicMaterial({ color: 0x808080 });
const roof = new THREE.Mesh(roofGeometry, roofMaterial);
roof.position.set(0, 6, 0);
roof.rotation.y = Math.PI / 4;

// Create the windows of the building
const windowGeometry = new THREE.BoxGeometry(1, 1, 1);
const windowMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });
const window1 = new THREE.Mesh(windowGeometry, windowMaterial);
window1.position.set(2.5, 2.5, -4.5);
const window2 = new THREE.Mesh(windowGeometry, windowMaterial);
window2.position.set(-2.5, 2.5, -4.5);
const window3 = new THREE.Mesh(windowGeometry, windowMaterial);
window3.position.set(2.5, 2.5, 4.5);
const window4 = new THREE.Mesh(windowGeometry, windowMaterial);
window4.position.set(-2.5, 2.5, 4.5);

// Add everything to the scene
scene.add(wall1);
scene.add(wall2);
scene.add(wall3);
scene.add(wall4);
scene.add(roof);
scene.add(window1);
scene.add(window2);
scene.add(window3);
scene.add(window4);

// Position the camera
camera.position.z = 15;

// Render the scene
function animate() {
  requestAnimationFrame(animate);
  renderer.render(scene, camera);
}
animate();

  </script>
</body>
</html>